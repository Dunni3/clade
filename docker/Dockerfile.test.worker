FROM python:3.12-slim

RUN apt-get update && apt-get install -y \
    openssh-server \
    git \
    tmux \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install Claude Code (native installer, no Node.js required)
RUN curl -fsSL https://claude.ai/install.sh | bash \
    && cp /root/.local/bin/claude /usr/local/bin/claude

ENV TERM=xterm

# Set up SSH server
RUN mkdir -p /run/sshd

# Create test user with home directory
RUN useradd -m -s /bin/bash testuser \
    && mkdir -p /home/testuser/.ssh /home/testuser/.claude \
    && chmod 700 /home/testuser/.ssh

# Copy public key for SSH auth
COPY test-keys/id_ed25519.pub /home/testuser/.ssh/authorized_keys
RUN chmod 600 /home/testuser/.ssh/authorized_keys \
    && chown -R testuser:testuser /home/testuser/.ssh /home/testuser/.claude

# Install clade package (so prereq checks find python3, and for optional deploy testing)
COPY . /opt/clade
RUN pip install --no-cache-dir -e "/opt/clade[server]"

# Install task activity logging hook for Claude Code.
# The hook fires on PostToolUse/Stop events and POSTs summaries to the Hearth API,
# giving live visibility into what a worker is doing during delegated tasks.
RUN mkdir -p /home/testuser/.claude/hooks \
    && cp /opt/clade/hooks/task_logger.sh /home/testuser/.claude/hooks/task_logger.sh \
    && chmod +x /home/testuser/.claude/hooks/task_logger.sh \
    && echo '{"hooks":{"PostToolUse":[{"matcher":"Bash|Edit|Write|Task","hooks":[{"type":"command","command":"/home/testuser/.claude/hooks/task_logger.sh","timeout":10}]}],"Stop":[{"hooks":[{"type":"command","command":"/home/testuser/.claude/hooks/task_logger.sh","timeout":10}]}]}}' \
       > /home/testuser/.claude/settings.json \
    && chown -R testuser:testuser /home/testuser/.claude

# Entrypoint starts sshd + Ember server
COPY docker/entrypoint-worker.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

EXPOSE 22 8100
CMD ["/entrypoint.sh"]
